{% from "govuk/components/cookie-banner/macro.njk" import govukCookieBanner %}

{% set html %}
<p class="govuk-body">We use some essential cookies to make this service work.</p>
<p class="govuk-body">Weâ€™d also like to use analytics cookies so we can understand how you use the service and make improvements.</p>
{% endset %}

<div style="margin: 100px; ">
  <h1>{{ cookieBackLink }}</h1>
  <form method="post" name="cookieForm" action="/cookies">
    <input id="response-redirect" name="redirect" type="hidden" value="{{ cookieBackLink }}" />
    <input id="response" name="response" type="hidden" value="" />
    {{ govukCookieBanner({
        ariaLabel: "Cookies on",
        messages: [
          {
            headingText: "Cookies on",
            html: html,
            actions: [
              {
                text: "Accept analytics cookies",
                type: "submit",
                attributes: {id: 'cookie-consent-yes'}
              },
              {
                text: "Reject analytics cookies",
                type: "submit",
                attributes: {id: 'cookie-consent-no'}
              },
              {
                text: "View cookies",
                href: "#"
              }
            ]
          }
        ]
}) }}
  </form>
</div>